@model PocLocadora.Models.Filme

@{
    ViewData["Title"] = "Filmes";
}
<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <select asp-for="GeneroId" class="form-control" asp-items="@((SelectList)ViewData["Generos"])">
                    <option></option>
                </select>

                <span asp-validation-for="GeneroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classificacao" class="control-label"></label>
                <input asp-for="Classificacao" class="form-control" />
                <span asp-validation-for="Classificacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
                <a class="btn" asp-controller="Home" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-10">
        <partial name="_ListaFilmes" />
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
